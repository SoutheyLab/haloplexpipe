# Default settings for the pipeline stages.
# These can be overridden in the stage settings below.

defaults:
    # Number of CPU cores to use for the task
    cores: 1
    # Maximum memory in gigabytes for a cluster job
    mem: 4
    # VLSCI account for quota
    account: vh83
    queue: com
    # Maximum allowed running time on the cluster in Hours:Minutes
    walltime: '01:00'
    # Load modules for running a command on the cluster.
    modules:
    # Run on the local machine (where the pipeline is run)
    # instead of on the cluster. False means run on the cluster.
    local: False

# Stage-specific settings. These override the defaults above.
# Each stage must have a unique name. This name will be used in
# the pipeine to find the settings for the stage.

stages:
    run_surecalltrimmer:
        queue: short
        cores: 1
        walltime: '00:30'
        mem: 4
        modules:
            - 'java'
    
    align_bwa:
        queue: short
        cores: 4
        walltime: '00:30'
        mem: 8
        modules:
            - 'bwa/0.7.12'
            - 'samtools/1.7'
    
    run_locatit:
        queue: short
        cores: 1
        walltime: '00:30'
        mem: 4
        modules:
            - 'java'

    sort_bam:
        queue: short
        walltime: '00:30'
        mem: 4
        modules:
            - 'picard/2.9.2'
            - 'samtools/1.7'
    
    call_haplotypecaller_gatk:
        queue: com
        walltime: '02:00'
        mem: 8
        modules:
            - 'gatk/3.7'

    combine_gvcf_gatk:
        queue: short
        cores: 1
        walltime: '00:30'
        mem: 30
        modules:
            - 'gatk/3.7'
    
    genotype_gvcf_gatk:
        queue: short
        cores: 8
        walltime: '00:30'
        mem: 30
        modules:
            - 'gatk/3.7'
    
    vt_decompose_normalise:
        queue: short
        cores: 1
        walltime: '00:20'
        mem: 8
        modules:
            - 'vt/0.57'
                                                       
    variant_annotator_gatk:
        queue: short
        cores: 8
        walltime: '00:30'
        mem: 32
        modules:
            - 'gatk/3.7'
    
    gatk_filter:
        queue: short
        walltime: '00:30'
        mem: 16
        modules:
            - 'gatk/3.7'

    apply_vep:
        queue: short
        cores: 24
        walltime: '00:30'
        modules:
            - 'vep/90'


    ## Metrics Generation
    intersect_bed:
        queue: short
        walltime: '00:10'
        mem: 4
        modules:
            - 'bedtools/2.26.0'        

    coverage_bed:
        queue: short
        walltime: '00:10'
        mem: 12
        modules:
            - 'bedtools/2.26.0'
    
    genome_reads:
        queue: short
        walltime: '00:10'
        mem: 2
        modules:
            - 'samtools/1.7'
    
    target_reads:
        queue: short
        walltime: '00:10'
        mem: 2
        modules:
            - 'samtools/1.7'
    
    total_reads:
        queue: short
        walltime: '00:10'
        mem: 2
        modules:
            - 'samtools/1.7'

    generate_stats:
        queue: short
        walltime: '00:30'
        mem: 32
        modules:
            - 'R/3.4.3'

    generate_amplicon_metrics:
        queue: short
        walltime: '00:30'
        mem: 4
        modules:
            - 'bedtools/2.26.0'


pipeline_id: 'haloplex'

